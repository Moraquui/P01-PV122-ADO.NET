@page
@model WebAppDemoRazorPages.Pages.Organizations.DetailsModel

@{
    ViewData["Title"] = "Details";

}

<h1>Details</h1>
<a class="nav-link text-dark" asp-page="/OrganizationUsers/Create" asp-route-id="@Model.Organization.Id">Oasdrg</a>
<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.FullName)
        </dd>
    </dl>
    <h2>Principal Staff</h2>
    <table class="table">
        <thead>
    @foreach (var item in Model.OrganizationUsers)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessLevel)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </thead>
    </table>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Organization?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
